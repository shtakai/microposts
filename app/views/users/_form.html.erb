<div class="panel panel-default">
    <div class="panel-body">
        <%= form_for @user, html: { class: "form-horizontal center"} do |f| %>
         
            <% if @user.errors.present? %>
                <div class="alert alert-danger">
                    <%= alert %>
                    <ul>
                        <% @user.errors.full_messages.each do |full_message| %>
                            <li>
                                <%= full_message %>
                            </li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
                    
            <div class="form-group">
                <%= f.label :name, "email", class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= f.text_field :email, class: "form-control", placeholder: "your email" %>
                </div>
            </div>
            
            <div class="form-group">
                <%= f.label :profile, "profile", class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= f.text_area :profile, class: "form-control", placeholder: "Your profile" %>
                </div>
            </div>
            
            <div class="form-group">
                <%= f.label :location, "location", class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= f.text_field :location, class: "form-control", placeholder: "your location" %>
                </div>
            </div>
            
    
            <div class="form-group">
                <%= f.label :url, "URL", class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                    <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: "btn btn-sm btn-primary" %>
                </div>
            </div>
        <% end %>
        
    </div>
</div>
